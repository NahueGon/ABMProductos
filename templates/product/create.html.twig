{% extends 'base.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block body %}
<div class="border border-light p-3">
    <div class="border-bottom mb-2">
        <h1>{{title}} Producto</h1>
    </div>
    <div class="row">
    {{ form_start(form) }}
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.product)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.description)}}
            </div>
        </div>
        <div class="mb-3">
            <div class="form-group">
                {{form_row(form.price)}}
            </div>
        </div>
    {{ form_end(form) }}
</div>
    </div>
{% endblock %}
